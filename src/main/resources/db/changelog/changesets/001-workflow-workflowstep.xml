<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1" author="mvandermade">
        <createTable tableName="workers">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="hostname" type="varchar(255)"/>
            <column name="expire_heartbeat_at" type="TIMESTAMP WITH TIME ZONE"/>
        </createTable>
        <createSequence sequenceName="workers_seq"
                        cycle="false"
                        dataType="bigint"
                        incrementBy="50"
                        maxValue="9223372036854775807"
                        startValue="1"
        />

        <createTable tableName="workflows">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="version" type="bigint"/>
            <column name="program_counter" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="worker_id" type="bigint">
                <constraints unique="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="workflows" baseColumnNames="worker_id"
                                 constraintName="fk_workflows_workers"
                                 referencedTableName="workers"
                                 referencedColumnNames="id"/>
        <createSequence sequenceName="workflows_seq"
                        cycle="false"
                        dataType="bigint"
                        incrementBy="50"
                        maxValue="9223372036854775807"
                        startValue="1"
        />

        <createTable tableName="workflow_steps">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="workflow_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="input" type="clob">
                <constraints nullable="false"/>
            </column>
            <column name="step_number" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="started_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="callback" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="output" type="clob"/>
            <column name="output_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="error_message" type="clob"/>
            <column name="error_at" type="TIMESTAMP WITH TIME ZONE"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="workflow_steps" baseColumnNames="workflow_id"
                                 constraintName="fk_workflow_steps_workflows"
                                 referencedTableName="workflows"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
        />
        <createSequence sequenceName="workflow_steps_seq"
                        cycle="false"
                        dataType="bigint"
                        incrementBy="50"
                        maxValue="9223372036854775807"
                        startValue="1"
        />
    </changeSet>

</databaseChangeLog>
