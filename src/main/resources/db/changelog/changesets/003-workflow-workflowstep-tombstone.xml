<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="3" author="mvandermade">
        <createTable tableName="workflow_tombstones">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="version" type="bigint"/>
            <column name="program_counter" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="worker_id" type="bigint">
                <constraints unique="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="marked_as_tombstone_at" type="TIMESTAMP WITH TIME ZONE"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="workflow_tombstones" baseColumnNames="worker_id"
                                 constraintName="fk_workflow_tombstones_workers"
                                 referencedTableName="workers"
                                 referencedColumnNames="id"/>
        <createSequence sequenceName="workflow_tombstones_seq"
                        cycle="false"
                        dataType="bigint"
                        incrementBy="50"
                        maxValue="9223372036854775807"
                        startValue="1"
        />

        <createTable tableName="workflow_step_tombstones">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="workflow_tombstone_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="input" type="clob">
                <constraints nullable="false"/>
            </column>
            <column name="step_number" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="started_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="callback" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="output" type="clob"/>
            <column name="output_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="error_message" type="clob"/>
            <column name="error_at" type="TIMESTAMP WITH TIME ZONE"/>

        </createTable>

        <addForeignKeyConstraint baseTableName="workflow_step_tombstones" baseColumnNames="workflow_tombstone_id"
                                 constraintName="fk_workflow_step_tombstones_workflow_tombstones"
                                 referencedTableName="workflow_tombstones"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
        />

        <createSequence sequenceName="workflow_step_tombstones_seq"
                        cycle="false"
                        dataType="bigint"
                        incrementBy="50"
                        maxValue="9223372036854775807"
                        startValue="1"
        />
    </changeSet>

</databaseChangeLog>
